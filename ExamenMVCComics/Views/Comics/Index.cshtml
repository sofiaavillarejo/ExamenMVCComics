<h1 style="color: blue">Comics SQL</h1>
<a asp-controller="Comics" asp-action="Create">Create New Comic</a>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<td>ID Comic</td>
			<td>Nombre</td>
			<td>Imagen</td>
			<td>Descripcion</td>
		</tr>
	</thead>

	<tbody>
		@foreach (Comic comic in Model)
		{
			<tr>
				<td>@comic.IdComic</td>
				<td>@comic.Nombre</td>
				<td><img src="@comic.Imagen" style="width:100px; height: 100px"/></td>
				<td>@comic.Descripcion</td>
			</tr>
		}
	</tbody>

</table>
